@model User


@if (Security.IsAuthenticated == true && Model.Id != Security.UserId)
{
    var isFollowing = Users.isFollowing(CurrentUser.Id, Model.Id);
    var routeName = isFollowing ? "Unfollow" : "Follow";

    <input type="button" id="follow_@Model.Id" onclick="FollowUser('@Model.Username', @Model.Id)" value="@routeName" />
}