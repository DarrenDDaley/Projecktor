@model PasswordRestViewModel

@{
    ViewBag.Title = "Password Reset";
}

<p>
   @if(Model.ExpiredLink == true)
   {
       <p>Sorry your link has exprired, you'll need to get another one</p>
   }
   else
   {
    using (var signupForm = Html.BeginForm("PasswordReset", "Home"))
    {
        @Html.AntiForgeryToken()

        <div class="validation">
            @Html.ValidationSummary()
        </div>
        @Html.HiddenFor(m => m.userId, new { Value = ViewContext.RouteData.Values["userId"], @class = "input" })
        @Html.HiddenFor(m => m.passwordId, new { Value = ViewContext.RouteData.Values["passwordId"], @class = "input" })
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "input" }) <br />
        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "input" }) <br />
        <input type="submit" value="Send" />
     }
   }
</p>