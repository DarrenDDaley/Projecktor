@model RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<div class="logo">
    <img class="logo-image" src='@Url.Content("~/Images/logo.png")' />
</div>

<div class="registration-form">
    <div class="white-pane">
        <div class="forms">
            @using (var signupForm = Html.BeginForm("Register", "Home"))
            {
                @Html.AntiForgeryToken()
                <div class="validation">
                    @Html.ValidationSummary()
                </div>
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "input" }) <br />
                @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", @class = "input" }) <br />
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "input" }) <br />
                <input type="submit" value="Create Account" />
            }
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Log in", "Login")
</div>
